<h1>Sign Up</h1>

<%= form_with model: @user, url: sign_up_path, class:"form" do |f|%>
    <% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>

    <div class="mb-1">
        <%= f.label :email, class: "form-label" %><br>  
        <%= f.text_field :email, class: "form-control", placeholder: "tim@apple.com"%><br>  
    </div>

    <div class="mb-1">
        <%= f.label :password, class: "form-label" %><br>  
        <%= f.password_field :password, class: "form-control", placeholder: "Type password"%><br>  
    </div>

    <div class="mb-1">
        <%= f.label :password_confirmation, class: "form-label" %><br>
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Type password"%><br>
    </div>

    <div class="d-grid gap-2">
        <%= f.submit "Sign Up", class: "btn btn-primary btn-block" %>
    </div>
<%end%>