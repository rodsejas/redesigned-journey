<%= form_with(model: tenancy) do |form| %>
  <% if tenancy.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tenancy.errors.count, "error") %> prohibited this tenancy from being saved:</h2>

      <ul>
        <% tenancy.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Agreement Name", style: "display: block" %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.text_field :start_date, :placeholder => 'YYYY-MM-DD', class:"form-control" %>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.text_field :end_date, :placeholder => 'YYYY-MM-DD', class:"form-control" %>
  </div>

