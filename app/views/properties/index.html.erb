<p style="color: green"><%= notice %></p>

<h1>Properties</h1>
<%= link_to "Add new property", new_property_path, class:"btn btn-outline-success" %>


<div class="row">
<% @properties.each do |property| %>
  <div class="col-sm-6">
    <div class="card">
      <img src="<%= property.image %>" class="card-img-top;" alt="...">

      <div class="card-body">
        <h5 class="card-title"><%= property.street_address %></h5>
        <p class="card-text text-secondary"><%= property.suburb %>, <%= property.state %> <%= property.postcode %></p>

        <%= link_to "See more", property, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>